SRCS	= pipex.c make_pipex.c access_cmd.c utils.c

OBJS	= $(SRCS:.c=.o)

CC		= gcc

CFLAGS	= -Wall -Werror -Wextra

RM		= rm -f

NAME	= pipex

all		= $(NAME)

$(NAME) : $(OBJS)
		$(CC) $(CFLAGS) $(OBJS) -o $(NAME)

clean:
		$(RM) $(OBJS)
fclean:	clean
		$(RM) $(NAME)
re:		fclean $(NAME)
.PHONY:	all clean fclean re
